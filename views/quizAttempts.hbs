<style>
    h2 {
        color: #333;
        padding-top: 50px;
    }

    #searchInput {
        padding: 10px;
        width: 50%;
        margin-bottom: 20px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    th,
    td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    p {
        font-size: 18px;
        color: #666;
    }
</style>

<center>
    <h2>Quiz Attempts</h2>

    <input type="text" id="searchInput" placeholder="Search by Username..." onkeyup="searchByUsername()">
</center>


{{#if attempts.length}}
<table id="quizTable">
    <thead>
        <tr>
            <th>Attempt ID</th>
            <th>Username</th>
            <th>Score</th>
            <th>Quiz ID</th>
        </tr>
    </thead>
    <tbody>
        {{#each attempts}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.username}}</td>
            <td>{{this.score}}</td>
            <td>{{this.quizid}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>No quiz attempts found.</p>
{{/if}}